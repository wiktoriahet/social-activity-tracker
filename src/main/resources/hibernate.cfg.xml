<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings (jdbc connection information)-->
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:~/h2database/social-activity-tracker</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"/>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">update</property>

        <!-- (causes hibernate to attempt to locate mapping a classpath resource using java.lang.ClassLoader lookup) -->
        <!--        <mapping resource="org/hibernate/tutorial/hbm/Event.hbm.xml"/>-->

        <!-- za kazdym razem jak tworze encje to musze ja tu wsadzic -->
        <mapping class="pl.hetman.wiktoria.java.app.socialactivitytracker.dao.entity.ActivityEntity"/>
        <mapping class="pl.hetman.wiktoria.java.app.socialactivitytracker.dao.entity.ActivityTypeEntity"/>
        <mapping class="pl.hetman.wiktoria.java.app.socialactivitytracker.dao.entity.UserEntity"/>
        <mapping class="pl.hetman.wiktoria.java.app.socialactivitytracker.dao.hibernate.repository.DefaultActivityRepository"/>


    </session-factory>

</hibernate-configuration>